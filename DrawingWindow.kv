#: import Window kivy.core.window.Window
<ChaosMethod>:
    box_widget: box
    float_widget: floatL
    BoxLayout:
        FloatLayout:
            id: floatL
            size_hint: 0.7, 1
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            slider_a: slider_a
            slider_x: slider_x
            slider_y: slider_y
            slider_c: slider_count
            idLabel: label
            id: box
            orientation: "vertical"
            padding: 30,20,30,20
            spacing: 10
            size_hint: 0.3, 1

            ScrollView:
                GridLayout:
                    cols: 1
                    padding: dp(5)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        id: label
                        size_hint_y: None
                        height: self.texture_size[1]
                        valign: 'top'
                        font_style: 'Caption'

            MDLabel:
                text: 'Количество вершин многоугольника:' + str(slider_a.value)
                font_style: 'Caption'
                size_hint: 1, 0.1
            MDSlider:
                id: slider_a
                min: 3
                max: 10
                value: 3
                step: 1
                size_hint: 1, 0.1

            MDLabel:
                text: 'Координаты начальной точки (x,y): (' + str(int(slider_x.value)) + ',' +str(int(slider_y.value)) + ')'
                font_style: 'Caption'
                size_hint: 1, 0.1
            MDSlider:
                id: slider_x
                min: 0
                max: root.float_widget.width - 6
                value: root.float_widget.width // 2
                step: 10
                size_hint: 1, 0.1
            MDSlider:
                id: slider_y
                min: 0
                max: root.float_widget.height
                value: root.float_widget.height // 2
                step: 10
                size_hint: 1, 0.1

            MDLabel:
                text: 'Количество итераций:' + str(slider_count.value)
                font_style: 'Caption'
                size_hint: 1, 0.1
            MDSlider:
                id: slider_count
                min: 100
                max: 20000
                value: 6000
                step: 100
                size_hint: 1, 0.1

            MDBoxLayout:
                size_hint: 1, 0.1
                spacing: 20
                MDRectangleFlatButton:
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    text: "Нарисовать!"
                    size_hint: 0.5, 1
                    on_release: root.start_drawing()
                MDRectangleFlatButton:
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    text: 'Назад'
                    size_hint: 0.5, 1
                    on_release:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'fractals'